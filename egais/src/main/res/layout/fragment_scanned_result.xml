<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scanned_result"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/scanned_result_success"
    android:visibility="gone">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/scanned_result_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="135dp"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center_horizontal"
            android:text="@string/scanner_result_success_title"
            android:textColor="@color/white"
            android:textSize="20sp"/>

        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/icon"
            android:layout_width="120dp"
            android:layout_height="133dp"
            android:layout_below="@+id/scanned_result_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="35dp"
            app:srcCompat="@drawable/ic_shape"/>

        <TextView
            android:id="@+id/scanned_result_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/icon"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/roboto_regular"
            android:gravity="center_horizontal"
            android:text="@string/scanner_result_success_text"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/scanned_result_error_hand"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/scanned_result_text"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:src="@mipmap/ic_hand"
            android:visibility="gone"/>
    </RelativeLayout>
</FrameLayout>